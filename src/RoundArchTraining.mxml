			private function testRegex( regex:RegExp, value:String ):Boolean
			{
				return new RegExp(regex).test(value) ? true : false
			}
			
			
			private function filterN( product:ProductVO ):Boolean 
			{
				if (testRegex( /[a-zA-Z]{5}\s(N)/, product.name)) 
				{
